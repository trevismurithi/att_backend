{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "rootDir": "src",
    "lib": [
      "es2020"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "types": [
      "node"
    ],
    "strict": true,
    "noImplicitAny": true
  }
}
